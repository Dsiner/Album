<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/lib_album_dimen_title_height"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_bottom_edit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:paddingLeft="@dimen/lib_album_dimen_margin"
        android:paddingRight="@dimen/lib_album_dimen_margin"
        android:text="@string/lib_album_preview"
        android:textColor="@color/lib_album_color_text_bottom"
        android:textSize="@dimen/lib_album_dimen_text_sub" />

    <LinearLayout
        android:id="@+id/llyt_bottom_origin"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:descendantFocusability="blocksDescendants">

            <CheckBox
                android:id="@+id/cb_toggle_origin"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/lib_album_select_check"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_bottom_origin"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/lib_album_dimen_margin"
            android:text="@string/lib_album_origin"
            android:textColor="@color/lib_album_color_text_bottom"
            android:textSize="@dimen/lib_album_dimen_text_sub" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llyt_bottom_choose"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center_vertical|right"
        android:orientation="horizontal">

        <FrameLayout
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:descendantFocusability="blocksDescendants">

            <CheckBox
                android:id="@+id/cb_toggle_choose"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:layout_margin="3dp"
                android:background="@drawable/lib_album_select_select"
                android:button="@null"
                android:clickable="false"
                android:focusable="false"
                android:gravity="center" />
        </FrameLayout>

        <TextView
            android:id="@+id/tv_bottom_choose"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:paddingRight="@dimen/lib_album_dimen_margin"
            android:text="@string/lib_album_choose"
            android:textColor="@color/lib_album_color_text_bottom"
            android:textSize="@dimen/lib_album_dimen_text_sub" />
    </LinearLayout>
</LinearLayout>